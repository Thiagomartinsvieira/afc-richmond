{
	"$schema": "https://biomejs.dev/schemas/1.4.0/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
	"javascript": {
		"formatter": {
			"enabled": true,
			"indentWidth": 2,
			"semicolons": "always",
			"quoteStyle": "single",
			"lineWidth": 80,
			"indentStyle": "space",
			"trailingComma": "es5",
			"arrowParentheses": "always"
		}
	},
	"json": {
		"formatter": {
			"enabled": false
		}
	}
}
